
<xui>
    <title value="New group name" image="gfx/icons/alliance.png"/>
    <body>
        <panel border="10" axis="y">
            <panel axis="x" border="0" expand="horiz">
                <mlabel html="yes" border="0" id="label">
                    Choose group name:
                </mlabel>
            </panel>
            <panel axis="x" border="0" expand="horiz">
                <strut width="10"/>
                <radiobutton eventid="selectedpublic" id="public" group="radio" text="Public - Everyone can see this folder"/>
                <filler/>
            </panel>
            <panel axis="x" border="0" expand="horiz">
                <strut width="10"/>
                <radiobutton eventid="selectedcustom" id="custom" group="radio" text="Custom - Only selected friends can see this folder"/>
                <filler/>
            </panel>
            <panel id="customp1" axis="x" border="0" expand="horiz">
                <strut width="10"/>
                <textfield text="" id="customtext"/>
                <filler/>
            </panel>
            <strut height="5"/>
            <panel id="customp2" axis="x" border="0" expand="horiz">
                <strut width="10"/>
                <mlabel html="yes" border="0" id="examples">
                    Divide multiple group names with commas.[br]
                    Example 1: music,games[br]
                    Example 2: music,games,private
                </mlabel>
                <filler/>
            </panel>
            <strut height="15"/>
            <panel axis="x" border="0" expand="horiz">
                <filler axis="x"/>
                <button text="OK" eventid="confirm" width="80"/>
                <filler axis="x"/>
            </panel>
        </panel>
    </body>
</xui>