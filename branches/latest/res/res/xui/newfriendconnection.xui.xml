
<xui>
    <title value="New friend connected" image="gfx/icons/alliance.png"/>
    <body>
        <panel border="10" axis="y" height="100" width="450">
            <mlabel html="yes" border="0" id="label">
               You have successfully connected to $$NAME$$!
            </mlabel>
            <panel axis="x" border="0" expand="horiz">
                <checkbox id="dontshow" text="Do not show this again"/>
            </panel>
            <strut height="15"/>
            <panel axis="x" border="0" expand="horiz">
                <filler axis="x"/>
                <button text="OK" action="dispose" width="80"/>
                <filler axis="x"/>
            </panel>
        </panel>
    </body>
</xui>