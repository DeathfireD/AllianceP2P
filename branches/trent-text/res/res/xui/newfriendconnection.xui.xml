<xui>
    <body>
        <panel border="10" axis="y" height="100" width="450">
            <mlabel html="yes" border="0" id="label">%text%
            </mlabel>
            <panel axis="x" border="0" expand="horiz">
                <checkbox id="dontshow" text="%text%"/>
            </panel>
            <strut height="15"/>
            <panel axis="x" border="0" expand="horiz">
                <filler axis="x"/>
                <button id="ok" text="%text%" action="dispose" width="80"/>
                <filler axis="x"/>
            </panel>
        </panel>
    </body>
</xui>