<xui>
    <body>
        <panel border="10" axis="y">
            <panel border="5" axis="x" expand="horiz">
                <label id="address" text="%text%"/>
                <strut width="5"/>
                <textfield width="30" minwidth="30" maxwidth="30" maxcolumns="3" id="ip_addr1"/>
                <label text="."/>
                <textfield width="30" minwidth="30" maxwidth="30" id="ip_addr2"/>
                <label text="."/>
                <textfield width="30" minwidth="30" maxwidth="30" id="ip_addr3"/>
                <label text="."/>
                <textfield width="30" minwidth="30" maxwidth="30" id="ip_addr4"/>
                <strut width="15"/>
                <label id="mask" text="%text%"/>
                <strut width="5"/>
                <textfield width="30" minwidth="30" maxwidth="30" id="ip_addr_mask"/>
                <filler expand="horiz"/>
            </panel>
            <strut height="10"/>
            <panel axis="x" border="0" expand="horiz">
                <strut width="10"/>
                <radiobutton eventid="radioallow" group="a" text="%text%"/>
                <strut width="10"/>
                <radiobutton eventid="radiodeny" group="a" text="%text%"/>
                <filler/>
            </panel>
            <strut height="10"/>
            <panel axis="x" border="0" expand="horiz">
                <filler axis="x"/>
                <button text="%text%" eventid="accept" width="80"/>
                <strut width="10"/>
                <button text="%text%" eventid="cancel" width="80"/>
            </panel>
        </panel>
    </body>
</xui>